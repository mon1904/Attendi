extends ../layout

block content
  .container
    .message-wrapper
      .col-md-6.center.float-none.mon
        h3 Message Teacher
        ul.list-group
          each teacher in teachers
            li.list-group-item
              a(href='/messages/teacher/'+teacher._id) #{teacher.details.firstname} #{teacher.details.lastname} (#{teacher.notifCnt})
