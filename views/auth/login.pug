extends ../layout

block content
    h2.page-header
    .logo
        img(src="/images/logo.png" style="margin-auto" width="200")
    if errors
        each error in  errors
            div.alert.alert-danger #{error.msg}
    form(method='post', action='/users/login', class="login")
        .form-group
            label Username
            input.form-control(name='username', type='text', placeholder='Enter Username')
        .form-group
            label Password
            input.form-control(name='password', type='password', placeholder='Enter Password')
            br
        input.btn.btn-primary.btn-login(type='submit', name='submit', value='Login')
    hr    
